@model List<UserViewModel>

<div class="text-center py-3">
    <h1 class="fw-bold mt-2">All Users</h1>
</div>
@if (TempData["message"] is not null)
{
    <div class="alert alert-success" role="alert">
        @TempData["message"]
    </div>
}
<div class="container-fluid">
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr class="text-center">
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Users is not null)
                {

                    @if (ViewBag.UsersCount > 0)
                    {
                        @foreach (var user in ViewBag.Users)
                        {
                            <tr class="text-center">
                                <td class="align-middle">@user.U_Id</td>
                                <td class="align-middle">@user.U_Name</td>
                                <td class="align-middle">@user.U_Date</td>
                                <td class="align-middle">
                                    <a class="btn btn-danger" asp-area="" asp-controller="AdminUser" asp-action="DeleteUser" asp-route-id="@user.U_Id">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="text-center">
                            <td class="align-middle" colspan="7">No cart available</td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="text-center">
                        <td class="align-middle" colspan="7">No cart available</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (ViewBag.Users is not null)
        {
            @if (ViewBag.UsersCount > 0)
            {
                <nav aria-label="Page navigation" class="d-flex justify-content-center">
                    <ul class="pagination">
                        <li class="page-item active">
                            <a class="page-link text-success border-success bg-white" href="#">1</a>
                        </li>
                    </ul>
                </nav>
            }
        }
    </div>
</div>