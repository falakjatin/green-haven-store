<div class="text-black text-center py-4">
    <h1 class="fw-bold mt-2">Add Product</h1>
</div>
<div class="container">
    @if (TempData["message"] is not null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["message"]
        </div>
    }
    
    <form asp-action="Add" method="post">
        <div class="mb-3">
            <label asp-for="P_Name" class="form-label">Product Name</label>
            <input type="text" asp-for="P_Name" name="P_Name" class="form-control">
            <span id="P_Name" asp-validation-for="P_Name" class="form-text text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="P_Price" class="form-label">Product Price</label>
            <input type="number" asp-for="P_Price" name="P_Price" class="form-control">
            <span id="P_Price" asp-validation-for="P_Price" class="form-text text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="P_PictureUri" class="form-label">Product Image Uri</label>
            <input type="url" asp-for="P_PictureUri" name="P_PictureUri" class="form-control">
            <span id="P_PictureUri" asp-validation-for="P_PictureUri" class="form-text text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="P_Description" class="form-label">Product Description</label>
            <input type="text" asp-for="P_Description" name="P_Description" class="form-control">
            <span id="P_Description" asp-validation-for="P_Description" class="form-text text-danger"></span>
        </div>
       @* <div class="mb-3">
            <label asp-for="P_Picture" class="form-label">Product Image</label>
            <input type="file" asp-for="P_Picture" name="P_Picture" class="form-control" accept="image/*">
            <span id="P_Picture" asp-validation-for="P_Picture" class="form-text text-danger"></span>
        </div>*@
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" name="CategoryId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Categories, "Cat_Id", "Cat_Name"))">
                <option>--Select--</option>
            </select>
            <span id="CategoryId" asp-validation-for="CategoryId" class="form-text text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-success">Add</button>
        <button type="reset" class="btn btn-outline-success">Reset</button>
    </form>
</div>
    

