@model User

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="text-black text-center py-4">
    <h1 class="fw-bold">Sign Up</h1>
</div>

<div class="container d-flex justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 rounded" style="background-color: #f8f9fa;">
            <div class="card-body p-4">
                @if (TempData["errorMsg"] is not null)
                {
                    <div class="alert alert-danger text-center mb-4" role="alert">
                        @TempData["errorMsg"]
                    </div>
                }

                <form asp-action="SignUp" method="post">
                    <div class="mb-3">
                        <label asp-for="U_Name" class="form-label fw-bold">User Name</label>
                        <input type="text" asp-for="U_Name" name="U_Name" class="form-control" placeholder="Enter your name">
                        <span id="U_Name" asp-validation-for="U_Name" class="form-text text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="U_Email" class="form-label fw-bold">Email Address</label>
                        <input type="email" asp-for="U_Email" name="U_Email" class="form-control" placeholder="Enter your email">
                        <span id="U_Email" asp-validation-for="U_Email" class="form-text text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="U_Address" class="form-label fw-bold">Address</label>
                        <input type="text" asp-for="U_Address" name="U_Address" class="form-control" placeholder="Enter your address">
                        <span id="U_Address" asp-validation-for="U_Address" class="form-text text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="U_Pincode" class="form-label fw-bold">Pincode</label>
                        <input type="text" asp-for="U_Pincode" name="U_Pincode" class="form-control" placeholder="Enter your pincode">
                        <span id="U_Pincode" asp-validation-for="U_Pincode" class="form-text text-danger"></span>
                    </div>
                    <!--<div class="mb-3">
                        <label asp-for="U_Type" class="form-label fw-bold">User Type</label>
                        <select class="form-select" asp-for="U_Type" aria-label="Select User Type" >
                            <option selected value="user">Customer</option>
                            <option value="admin">Admin</option>
                        </select>
                        <span id="U_Type" asp-validation-for="U_Type" class="form-text text-danger"></span>
                    </div>
                    -->
                    <div class="mb-3">
                        <label asp-for="U_Password" class="form-label fw-bold">Password</label>
                        <input type="password" asp-for="U_Password" name="U_Password" class="form-control" placeholder="Enter your password">
                        <span id="U_Password" asp-validation-for="U_Password" class="form-text text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success fw-bold">Sign Up</button>
                        <button type="reset" class="btn btn-outline-success">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
