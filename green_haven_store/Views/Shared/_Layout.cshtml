<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Green Haven Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/green_haven_store.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-success border-body" data-bs-theme="light">
            <div class="container">
               
                <a class="navbar-brand text-white fs-3 fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="p-2" style="background-color: #145a32; border-radius: 5px; font-family: 'Noto', serif;">
                        Green Haven Store
                    </span>
                </a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav ms-lg-auto">
                        @if (TempData["type"] is not null)
                        {
                            @if (TempData["type"].ToString() == "user")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Cart" asp-action="Index">Cart(@ViewBag.TotalQuantity)</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Order" asp-action="Index">Orders(@ViewBag.TotalOrderCount)</a>
                                </li>
                            }
                            @if (TempData["type"].ToString() == "admin")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Product
                                    </a>
                                    <ul class="dropdown-menu mt-2 ps-2 pe-2">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="AdminProduct" asp-action="Index">Product List</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="AdminProduct" asp-action="Add">Add Product</a>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Category
                                    </a>
                                    <ul class="dropdown-menu mt-2 ps-2 pe-2">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="AdminCategory" asp-action="Index">Category List</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="AdminCategory" asp-action="Add">Add Category</a>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="AdminUser" asp-action="Index">Users</a>
                                </li>
                            }
                            @if (TempData["type"].ToString() != "")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Index">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="SignUp">Signup</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Index">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="SignUp">Signup</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


   

    <div class="container">
        <hr class="my-5">
        <footer class="pt-5 pb-1">
            <div class="row">
                <div class="col-6 col-md-2 mb-3">
                    <h5>Customer Support</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark">Contact Us</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark">Help Centre</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md-2 mb-3">
                    <h5>About Us</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark">Careers</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark">Corporate Information</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-dark">About Marketplace</a></li>
                    </ul>
                </div>

                <div class="col-md-5 offset-md-1 mb-3">
                    <h5>Subscribe to our newsletter</h5>
                    <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                        <label for="newsletter1" class="visually-hidden">Email address</label>
                        <input id="newsletter1" type="text" class="form-control" placeholder="Email address">
                        <button class="btn btn-success" type="button">Subscribe</button>
                    </div>
                </div>

            </div>

            <div class="d-flex flex-column flex-sm-row justify-content-between py-4 my-4 border-top text-center">
                <p class="text-center"> &copy; 2024 - Green Haven Store - <a asp-area="" asp-controller="Home" class="text-success" asp-action="Privacy">Privacy</a></p>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
