@model List<Product>


<div class="text-black text-center py-5 mb-4">
    <h1 class="fw-bold mt-2">All Products</h1>
</div>

<div class="container">
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
        @if (ViewBag.Products is not null)
        {
            @foreach (var product in ViewBag.Products)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-img-top-wrapper" style="height: 200px; overflow: hidden;">
                            <img src="@product.P_PictureUri" class="card-img-top img-fluid" alt="@product.P_Name" style="object-fit: cover; width: 100%; height: 100%;">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-truncate">@product.P_Name</h5>
                            <p class="text-success fw-bold">$@product.P_Price</p>
                            <p class="card-text text-truncate">@product.P_Description</p>
                            <a class="btn btn-success w-100 mt-1" asp-area="" asp-controller="Product" asp-action="ProductSingleView" asp-route-id="@product.P_Id">View</a>
                            <a class="btn btn-outline-success w-100 mt-2" asp-area="" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.P_Id">Add to Cart</a>
                        </div>
                        <div class="card-footer text-center bg-light border-0">
                            <small class="text-muted">@product.P_Date</small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h3 class="fw-bold mt-2 text-center">There are no products available</h3>
        }
    </div>
</div>
